#!/usr/bin/python3

import sys

if len(sys.argv) == 1:
  print("template generator missing 1 argument: template filename")
  exit(22)

if len(sys.argv) > 2:
  print("too many arguments: template filename")
  exit(23)

boiler_plate = """# Template start
from importlib import import_module

\"\"\"
     Auto generated by in-built template generator
     Implug plugin system template v1
\"\"\"
"""

buffer = open(sys.argv[1], 'w')

data = f"{boiler_plate}# Template end"
buffer.write(data)
buffer.close()

print(f"Created template: {sys.argv[1]}")
exit(0)
